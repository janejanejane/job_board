<% provide(:title, 'Confirm job') %>
<h1>Confirm job</h1>

<div class="row-fluid">
	<div class="span8">
		<%= form_for(@job) do |f| %>
			<%= render 'shared/error_messages'%>
			
			<table>
				<tbody>
					<tr>
						<td>
							<%= f.label :jobkey_confirmation, "Job Post Confirmation" %>
						</td>
						<td>
							<%= f.text_field :jobkey_confirmation %>
						</td>
					</tr>
				</tbody>
			</table>
	        <div class="form-actions">
	        	<%= f.submit "Confirm job", class: "btn btn-large btn-primary" %>
	        	<%= submit_tag "Cancel", class: "btn btn-large" %>
	        </div>
	    <% end %>
	</div>
	<div class="span4"></div>
</div>
