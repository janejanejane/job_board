<% provide(:title, 'Confirm job') %>
<h1>Confirm job</h1>

<% content_for :tab_header do %>
  <li><%= link_to "Jobs", jobs_path %></li>
  <li><%= link_to "Users", users_path %></li>
<% end %>

<div class="row-fluid">
	<div class="span9">
		<%= form_for(@job) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			
			<table>
				<tbody>
					<tr>
						<td>
							<%= f.label :jobkey_confirmation, "Job Post Confirmation" %>
						</td>
						<td>
							<%= f.text_field :jobkey_confirmation %>
						</td>
					</tr>
				</tbody>
			</table>
	        <div class="form-actions">
	        	<%= f.submit "Confirm job", class: "btn btn-large btn-primary" %>
	        	<%= submit_tag "Cancel", class: "btn btn-large" %>
	        </div>
	    <% end %>
	</div>
	<div class="span3"></div>
</div>
