<% provide(:title, @job.jobtitle) %>
<div class="show-nav">
	<p class="all-jobs"><%= link_to "<< Back to all jobs", jobs_path %></p>
	<p class="category-job">
		<% current_category(@job) %>
		<%= link_to "See more #{@category} jobs >>", category_job_path %>
	</p>
</div>
<div class="show-content">
	<div class="row-fluid">
		<aside class="span8">
			<section>
				<div class="job-header">
					<h1><%= @job.jobtitle %></h1>
					<span>Posted <%= format_date(@job.created_at) %></span>
					<h2><%= @job.company_name %></h2>
					<span>Location:<%= @job.location %></span>
					<% url_with_protocol(@job.company_website) %>
					<%= link_to @website, @website, target: "_blank" %>
				</div>
				<div class="job-details">
					<h3><%= php_salary(@job.salary) %></h3>
					<h3><%= @job.jobtype %></h3>
				</div>
				<div class="job-content"><%= @job.description %></div>
			</section>
		</aside>
		<aside class="span4">
			<section>
				Tweet this job
				<br />
				Tell a friend	
			</section>
		</aside>
		<div class="job-apply">
			<h2>Apply for this position</h2>
			<%= @job.apply_details %>
		</div>	
	</div>
</div>