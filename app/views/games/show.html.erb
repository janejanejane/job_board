<% provide(:title, 'Game details') %>
<h1>Game details</h1>

<% content_for :tab_header do %>
  <li><%= link_to "Jobs", jobs_path %></li>
  <li><%= link_to "Users", users_path %></li>
<% end %>

<div class="row-fluid">
	<%= render 'shared/error_messages', object: @user %>
	<table>
		<tbody>
			<tr>
				<td>
			<label>Name</label>
				</td>
				<td>
					<%= @user.games.first.name %>
				</td>
			</tr>
			<tr>
				<td>
			<label>Link</label>
        </td>
				<td>
		      <%= @user.games.first.link %>
		    </td>
			</tr>
		</tbody>
	</table>
	<p class="all-jobs"><%= link_to "&lsaquo;&lsaquo;".html_safe + " Back to all games", user_games_path %></p>
</div>
