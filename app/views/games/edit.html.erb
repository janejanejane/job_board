<% provide(:title, 'Edit game') %>
<h1>Edit game</h1>

<% content_for :tab_header do %>
  <li><%= link_to "Jobs", jobs_path %></li>
  <li><%= link_to "Users", users_path %></li>
<% end %>

<div class="row-fluid">
	<%= form_for(@game) do |f| %>
		<%= render 'shared/error_messages', object: f.object%>
		<table>
			<tbody>
					<tr>
						<td>
							<%= f.label :name %>
						</td>
						<td>
							<%= f.text_field :name %>
						</td>
					</tr>
					<tr>
						<td>
			        <%= f.label :link %>
		        </td>
						<td>
				      <%= f.text_field :link %>
				    	<span class="desc">"Link to the game"</span>
				    </td>
					</tr>
			</tbody>
		</table>
    <div class="form-actions">
    	<%= f.submit "Update game", class: "btn btn-large btn-primary" %>
    	<%= submit_tag "Cancel", class: "btn btn-large" %>
    </div>
    <% end %>
</div>
