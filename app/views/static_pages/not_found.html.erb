<% provide(:title, 'Error') %>
<h1>Job Post not found</h1>

<% content_for :tab_header do %>
  <li><%= link_to "Jobs", jobs_path %></li>
  <li><%= link_to "Users", users_path %></li>
<% end %>

<div class="row-fluid">
	<div class="span9">	
		<table>
			<tbody>
				<tr>
					<td>
						The job post you are looking for is not found.
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="span3">
		<h3>Browse Jobs</h3>
		<ul>
			<% ["Programming", "Business/Exec", "Miscellaneous", "Copywriter", "iPhone Developer", "Customer Service/Support"]. each do |choice| %>
			<li><%= link_to "#{choice}", category_path(choice) %></li>
			<% end %>
		</ul>
	</div>
</div>
